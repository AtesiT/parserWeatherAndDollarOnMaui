<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ff="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             x:Class="parserA.MainPage">
    <Grid>
        <ff:CachedImage x:Name="BackgroundImage"
                        Source="https://banner2.cleanpng.com/20240306/bap/transparent-frozen-elsa-from-frozen-in-realistic-1710849331300.webp"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"
                        Aspect="AspectFill" />
        <ScrollView BackgroundColor="#5F000000">
            <VerticalStackLayout Padding="30,0" Spacing="25" HorizontalOptions="Center" VerticalOptions="Center">

                <CarouselView x:Name="CityCarousel"
                              HeightRequest="200"
                              HorizontalOptions="Fill">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding .}"
                                   Aspect="AspectFill"
                                   WidthRequest="300"
                                   HeightRequest="200" />
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

                <Frame Padding="10" CornerRadius="10" BackgroundColor="#33FFFFFF">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Курс доллара (ЦБ РФ):" FontSize="Medium" FontAttributes="Bold"/>
                        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Label x:Name="TodayRateLabel" 
                                   Text="Сегодня: ... " 
                                   VerticalOptions="Center"/>
                            <Label x:Name="YesterdayRateLabel" 
                                   Text="Вчера: ... " 
                                   VerticalOptions="Center"/>
                            <Label x:Name="RateChangeIndicatorLabel" 
                                   Text="" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <HorizontalStackLayout Spacing="3">
                    <Label Text="В " />
                    <Label BindingContext="{x:Reference cityEntry}" Text="{Binding Text}" />
                    <Label x:Name="temperatureLabel" Text="не понятно" />
                    <Label x:Name="weatherIconLabel" FontSize="Large" VerticalOptions="Center"/>
                    <Label Text="градуса по цельсию" />
                </HorizontalStackLayout>

                <Entry x:Name="cityEntry" Placeholder="Введите название города:" PlaceholderColor="Aqua" />
                <Button Clicked="UpdateButtonClicked" Text="Обновить" HorizontalOptions="Fill" />
                <Button x:Name="CounterBtn" 
                        Text="Нажать" 
                        SemanticProperties.Hint="Counts the number of times you click" 
                        Clicked="OnCounterClicked" 
                        HorizontalOptions="Fill" />
                <Button x:Name="ResetBtn" 
                        Text="Сбросить счетчик" 
                        SemanticProperties.Hint="Reset the counter" 
                        Clicked="OnResetClicked" 
                        HorizontalOptions="Fill" />
                <Label x:Name="messageLabel" LineBreakMode="CharacterWrap" TextColor="Yellow"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>